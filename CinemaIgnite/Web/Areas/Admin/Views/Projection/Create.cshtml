<div class="row">
    <div class="col-md-4 form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="TicketsAvailable" hidden class="form-control admin-input" value=@ViewBag.TicketsAvailable />
            <div id="movie-picker" class="form-group">
                <label asp-for="MovieId" class="control-label text-standard">Филм</label>
                <br>
                <select id="MovieId" name="MovieId" class="admin-input">
                    @foreach (var m in ViewBag.Movies)
                    {
                        <option value=@m.Id>@m.Title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input asp-for="Date" class="form-control admin-input" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Sound" placeholder="Аудио" class="form-control admin-input" />
                <span asp-validation-for="Sound" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Price" placeholder="Цена на билет" class="form-control admin-input" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check text-standard">
                <label class="form-check-label">
                    <input class="form-check-input admin-input" asp-for="Subtitles" /> Субтитри
                </label>
            </div>
            <div id="format-input" class="form-group">
                <label asp-for="Format" class="control-label text-standard">Формат</label>
                <br>
                <select id="Format" name="Format" class="admin-input">
                    <option value="3D">3D</option>
                    <option value="2D">2D</option>
                    <option value="4D">4D</option>
                    <option value="IMAX">IMAX</option>
                </select>
            </div>      

            <div class="form-group">
                <input type="submit" value="Създай" class="create-btn form-submit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
