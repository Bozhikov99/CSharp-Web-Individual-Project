@using Core.ViewModels.Movie
@model EditMovieModel

@{
    ViewData["Title"] = ViewData["EditPageTitle"];
}

<h1 class="text-standard edit-headline">@ViewData["EditPageTitle"]</h1>

<div class="row">
    <div class="col-md-4 form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value=@Model.Id />
            <img id="movie-image" />
            <div class="form-group">
                <input asp-for="Title" class="form-control admin-input" placeholder=@ViewData["HeadlinePlaceholder"] />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="image-input" asp-for="ImageUrl" class="form-control admin-input" placeholder=@ViewData["ImageUrlPlaceholder"] />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Description" class="form-control admin-input" placeholder=@ViewData["DescriptionPlaceholder"] />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Duration" class="form-control admin-input" placeholder=@ViewData["DurationPlaceholder"] />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ReleaseYear" class="form-control admin-input" placeholder=@ViewData["ReleaseYearPlaceholder"] />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Actors" class="form-control admin-input" placeholder=@ViewData["ActorsPlaceholder"] />
                <span asp-validation-for="Actors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Director" class="form-control admin-input" placeholder=@ViewData["DirectorPlaceholder"] />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Country" class="form-control admin-input" placeholder=@ViewData["CountryPlaceholder"] />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreIds" class="control-label text-standard" style="position: relative; left: 5.5vw;">@ViewData["GenreIdsPlaceholder"]</label>
                <select id="GenreIds" name="GenreIds" class="form-control admin-input" multiple>
                    @foreach (var g in ViewBag.Genres)
                    {
                        <option value="@g.Id">@g.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value=@ViewData["EditPageTitle"] class="form-submit edit-btn" />
            </div>
        </form>
    </div>
</div>

<script src="~/js/movieImage.js" type="module"></script>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
