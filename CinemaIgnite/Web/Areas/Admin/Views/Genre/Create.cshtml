@using Core.ViewModels.Genre
@model CreateGenreModel

@{
    ViewData["Title"] = "Създай жанр";
}

<h1 class="text-standard create-headline">Създай</h1>
    <div class="col-md-4 form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" placeholder="Име" class="form-control admin-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="form-submit create-btn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
