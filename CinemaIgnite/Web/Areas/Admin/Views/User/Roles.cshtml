@using Core.ViewModels.User
@model UserRoleModel

@{
    ViewData["Title"] = "User Roles";
    SelectListItem[] items = (SelectListItem[])ViewBag.Roles;
}

<div class="row">
    <div class="col-4">
        <form id="roles" method="post">
            <input type="hidden" name="Id" value=@Model.Id />
            <input type="hidden" name="Name" value=@Model.Name />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h3>User: @Html.DisplayFor(m=>m.Name)</h3>
            </div>
            <div class="form-floating">
                <div class="form-group">
                    <label>User Roles</label>
                    <select asp-for="RoleNames" asp-items=@items class="form-control">
                    </select>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>